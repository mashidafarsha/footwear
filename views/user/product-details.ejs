<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>eCommerce Product Detail</title>
    <link rel="stylesheet" href="/details/details.css" />
    <script src="/details/details-script.js"></script>
  </head>
  <body>
    <div class="container">
     
      <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
          <h1>DETAILS</h1>
        </div>
     
        <div class="row m-0">
          <div class="col-lg-4 left-side-product-box pb-3">
            <img
              src="/image/product-images/<%=product.Image[0]%>"
              class="border p-3"
            />
            <span class="sub-img">
              <img src="" class="border p-2" />
            </span>
          </div>

          <div class="col-lg-8">
            <div class="right-side-pro-detail border p-3 m-0">
              <div class="row">
                <div class="col-lg-12">
                  <h2><%=product.productName %></h2>
                  <p class="m-0 p-0"><%=product.Category%></p>
                </div>
                <div class="col-lg-12">
                  <p class="m-0 p-0 price-pro"><%=product.Price%></p>
                  <hr class="p-0 m-0" />
                </div>
                <div class="col-lg-12 pt-2">
                  <h5>Product Detail</h5>
                  <span
                    ><%=product.Description%></span
                  >
                  <hr class="m-0 pt-2 mt-2" />
                </div>
                <!-- <div class="col-lg-12">
                  <p class="tag-section">
                    <strong>Tag : </strong><a href="">Woman</a
                    ><a href="">,Man</a>
                  </p>
                </div>
                <div class="col-lg-12">
                  <h6>Quantity :</h6>
                  <input
                    type="number"
                    class="form-control text-center w-100"
                    value="1"
                  />
                </div> -->
                <div class="col-lg-12 mt-3">
                  <div class="row">
                    <div class="col-lg-6 pb-2">
                      <!-- <a href="#" class="btn btn-danger w-100">Add To Cart</a> -->
                      <button onclick="addToCart('<%=product._id%>')" class="btn btn-danger">Add to Cart</button>
                    </div>
                    <div class="col-lg-6">
                      <a href="#" class="btn btn-success w-100">Shop Now</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      
        <div class="row">
          <div class="col-lg-12 text-center pt-3">
            <h4>More Product</h4>
          </div>
        </div>
        <div class="row mt-3 p-0 text-center pro-box-section">
          <div class="col-lg-3 pb-2"></div>
        </div>
      </div>
      
    </div>
  </body>
</html>
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script>
  function addToCart(proId){

    console.log("dfghj");
    $.ajax({
       url:`/add-to-cart?id=${proId}`,
       method:'get',
       success:(response)=>{
        if(response.access){
          if(response.status){
            let count=$('#cart-count').html()
            count=parseInt(count)+1
            $("#cart-count").html(count)
        }
        }else{
          location.href="/userLogin"
        }
        
          
       }
    })
 }
</script>
