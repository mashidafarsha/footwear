<!DOCTYPE html>
<html lang="en">
<!-- Basic -->

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Metas -->
    <title>ThewayShop - Ecommerce Bootstrap 4 HTML Template</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">

   
</head>

<body>
   

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Wishlist</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active">Wishlist</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Wishlist  -->
    <div class="wishlist-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <% if(wishlists.product.length!=0) { %>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Images</th>
                                    <th>Product Name</th>
                                    <th>Unit Price </th>
                                    <th>Stock</th>
                                    <th>Add Item</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wishlists.product.forEach(function(wishlist) { %>
                                <tr>
                                    <td class="thumbnail-img">
                                        <a href="#">
									<img class="img-fluid" src="/image/product-images/<%=wishlist.Image[0] %> " alt="" />
								</a>
                                    </td>
                                    <td class="name-pr">
                                        <a href="#">
                                            <%=wishlist.productName %> 
								</a>
                                    </td>
                                    <td class="price-pr">
                                        <p> <%=wishlist.Price%> </p>
                                    </td>
                                    <td class="quantity-box"> <%=wishlist.Stock%> </td>
                                    <td class="add-pr">
                                        <a class="btn hvr-hover" href="/product-details/<%=wishlist._id%>">Add to Cart</a>
                                    </td>
                                    <td class="remove-pr">
                                        <a role="button"onclick="removeWishProduct('<%=wishlist._id%>','<%=wishlists._id%>')">
									<i class="fas fa-times"></i>
								</a>
                                    </td>
                                </tr>
                                <% }) %>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
        <div class="row " style="display: flex; justify-content: center;">
            <div class="col-12 col-md-6 m-3" style="width: 100%;">
              <h1 class="text-center text-danger"><b> Wishlist is empty</b></h1>
            </div>
            <div class="col-12 col-md-6 mx-auto"><img src="" style="width: 100%;" alt=""></div>
          </div>
          <% } %>
    <!-- End Wishlist -->

   

    <!-- Start copyright  -->
    <div class="footer-copyright">
        <p class="footer-company">All Rights Reserved. &copy; 2018 <a href="#">ThewayShop</a> Design By :
            <a href="https://html.design/">html design</a></p>
    </div>
    <!-- End copyright  -->

    <a href="#" id="back-to-top" title="Back to top" style="display: none;">&uarr;</a>

</body>

</html>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- AJAX -->
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
  crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script>
    function removeWishProduct(proId,wishlistId) {
       $.ajax({
         url: '/remove-wishproduct/' + proId,
         data: {
           proId: proId,
           wishlist:wishlistId,
           
         },
         method: 'post',
         success: (response) => {
           if (response.removeProduct) {
             Swal.fire(
               'Removed!',
               'Product removed from cart',
               'success'
             ).then(()=>{
               location.reload()
             })
            
           //   document.getElementById('grandTotal' + userId).innerHTML = parseInt(response.totalPrice) - parseInt(response.productTotal)
           //   $('#' + proId + 'item').remove()
           // } else {
           //   document.getElementById(proId).innerHTML = response.removeProduct
            }
         }
       })
     }
</script>