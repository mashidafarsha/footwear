<div class="mx-4">
   
    <a class="btn btn-light text-capitalize border-0" onclick="printDiv('printInvoice')" data-mdb-ripple-color="dark"><i
        class="fas fa-print text-primary"></i> Print</a>
  </div>
  <div class="card mx-4 my-3" id="printInvoice">
    <div class="card-body">
      <div class="container mb-5 mt-3"  name="printInvoice">
        <div class="row d-flex align-items-baseline">
          <div class="col-xl-12">
            <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>ID:<%= order._id%></strong></p>
          </div>
          
          <hr>
        </div>
  
        <div class="container ">
          <div class="col-md-12 my-4">
            <div class="text-center">
              <h1>freshShop</h1>
              <p class="pt-0">freshgallery.shop</p>
            </div>
  
          </div>
  
  
          <div class="d-flex justify-content-between w-100">
            <div class="col-xl-8">
              <ul class="list-unstyled">
                <li class="text-muted">To: <span style="color:#5d9fc5 ;"></span></li>
                <li class="text-muted"><%=order.userId.userName %></li>
                <li class="text-muted"><%=order.address%></li>
                <li class="text-muted"></li>
              </ul>
            </div>
            <div class="col-xl-4">
              <p class="text-muted">Invoice</p>
              <ul class="list-unstyled">
                <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                    class="fw-bold">ID:<%= order._id%></span></li>
                <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                    class="fw-bold">Order Date: <%= order.order_date.getDate() %>/<%= order.order_date.getMonth()+1 %>/<%=order.order_date.getFullYear() %> </span>
                   </li>
                <!-- <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                    class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                      </span></li> -->
              </ul>
            </div>
          </div>
  
          <div class="row my-2 mx-1 justify-content-center">
            <table class="table table-striped table-borderless">
              <thead style="background-color:#84B0CA ;" class="text-white">
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Name</th>
                  <th scope="col">Qty</th>
                  <th scope="col">Unit Price</th>
                  <th scope="col">Amount</th>
                </tr>
              </thead>
              <tbody>
                <% order.products.forEach((prod)=> { %>
                <tr>
                  <th scope="row"></th>
                  <td> <%= prod.item.productName %></td>
                  <td><%= prod.quantity %></td>
                  <td><%= prod.item.Price %></td>
                  <td><%= order.total %></td>
                </tr>
                <% }) %>
              </tbody>
  
            </table>
          </div>
          <div class="d-flex justify-content-between w-100">
            <div class="col-xl-8">
               
  
            </div>
            <div class="col-xl-3 ">
              <ul class="list-unstyled">
                <li class="text-muted ms-3 "><span class="text-black me-4" style="float:left;">Sub Total</span><span style="float:right;"></span></li>
                <li class="text-muted ms-3 mt-2" ><span class="text-black me-4" style="float:left;">Discount : </span><span style="float:right;"><%= order.discount_amount%></span></li>
                
              </ul>
              <p class="text-dark ms-3 mt-2"><span class="text-black me-4" style="float:left;"><b>Grand Total</b> : </span><span style="float:right;"><b><%= order.grand_total %></b></span></p>
               
            </div>
          </div>
           
           
  
        </div>
      </div>
    </div>
  </div>
  
  
  <script>
    function printDiv(printInvoice){
        var printContents = document.getElementById(printInvoice).innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
    </script>