<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Product Page - Admin HTML Template</title>
  </head>

  <body id="reportsPage">
    <div class="container mt-5">
      <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
              <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                  <tr>
                    <th scope="col">Sl No</th>
                    <th scope="col">USER NAME</th>
                    <th scope="col">NAME</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">DATE</th>
                    <th scope="col">ACTION</th>
                    <th scope="col">&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                  <% userData.forEach(function (userData,index) { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td class="tm-product-name"><%= userData.userName%></td>
                      <td><%=userData.fullName%></td>
                      <td><%=userData.Email%></td>
                      <td><%=userData.Date.getDate()+ "-" +(userData.Date.getMonth()+1) + "-" +userData.Date.getFullYear() %></td>
                      <% if (userData.status=="Active") { %>
                        <td><a href="/admin/blockUser/<%=userData._id%>" class="btn btn-danger " onclick="return confirm('Are you sure you want to block this <%= userData.userName%>?')">Block</a></td>
                        <%} else { %>
                          <td><a href="/admin/activeUser/<%=userData._id%>" class="btn btn-success" onclick="return confirm('Are you sure you want to unblock this <%= userData.userName%>?')">Active</a></td>
                        <% } %>
                      <!-- <td>
                        <a href="#" class="tm-product-delete-link">
                          <i class="far fa-trash-alt tm-product-delete-icon"></i>
                        </a>
                      </td>                                   -->
                    </tr>
                  <% }) %>
                   
                </tbody>
              </table>
            </div>
            <!-- table container -->
            
          </div>
        </div>
      </div>
    </div>
    <footer class="tm-footer row tm-mt-small">
      <div class="col-12 font-weight-light">
        <p class="text-center text-white mb-0 px-4 small">
          Copyright &copy; <b>2018</b> All rights reserved. Design:
          <a
            rel="nofollow noopener"
            href="https://templatemo.com"
            class="tm-footer-link"
            >Template Mo</a
          >
        </p>
      </div>
    </footer>

    <script>
      $(function () {
        $(".tm-product-name").on("click", function () {
          window.location.href = "edit-product.html";
        });
      });
    </script>
  </body>
</html>
